{
  "root": true,
  "extends": [
    "airbnb-base", "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error", {
        "printWidth": 120,
        "singleQuote": false
      }
    ],
    "key-spacing": [
      "error", {
        "align": {
          "beforeColon": true,
          "afterColon": true,
          "on": "colon"
        }
      }
    ],
    "max-len": [
      "error", {
        "code": 120,
        "ignoreUrls": true
      }
    ],
    "semi": [
      "error", "always"
    ],
    "linebreak-style": 0,
    "no-plusplus": 0,
    "no-unused-vars": 0,
    "no-param-reassign": 0
  }
}
